@using Eurofurence.App.Server.Web.Controllers
@using Eurofurence.App.Server.Services.Abstractions
@using Microsoft.Extensions.Options
@inject IOptions<GlobalOptions> GlobalOptions
@{
    Layout = "~/Views/Shared/_WebPreviewLayout.cshtml";

    var scheduleUrl = $"https://www.eurofurence.org/{GlobalOptions.Value.ConventionIdentifier}/schedule";
}

<header>
    <h1>
        Eurofurence @GlobalOptions.Value.ConventionNumber Event Schedule
        <span>What is happening when and where?</span>
    </h1>
</header>

<section class="summary">
    <div class="infobox">
        <i class="fas fa-calendar"></i> Just want to see what events
        Eurofurence @GlobalOptions.Value.ConventionNumber has in store for you this year?<br>
        Head on over to our <a href="@scheduleUrl">schedule at @scheduleUrl</a>!
    </div>
    <div class="infobox">
        <i class="fas fa-map-marker-alt"></i> Want more, like for example making
        your own schedule including only your favourite events? <br>
        Get our <a href="/">mobile app for Android and iOS</a>!
    </div>
</section>
